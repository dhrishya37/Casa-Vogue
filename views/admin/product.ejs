<!doctype html> 
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="#" />

    <!-- Libs CSS -->
    <link rel="preconnect" href="https://fonts.googleapis.com/" />
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&amp;display=swap" />
    <link rel="stylesheet" href="../../../cdn.jsdelivr.net/npm/%40tabler/icons-webfont%402.46.0/tabler-icons.min.css" />

    <!-- Theme CSS -->
    <style>
        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #d3d5d6;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
        .navbar-vertical-nav {
            width: 260px;
            height: 100vh;
            background-color: hsl(0, 0%, 100%);
            border-right: 1px solid #cfcdcd;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }
        .navbar-brand img {
            max-width: 160px;
            display: block;
            margin: 20px auto;
        }
        .navbar-nav {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .nav-item {
            display: block;
            border-bottom: 1px solid #f1f1f1;
        }
        .nav-link {
            display: flex;
            align-items: center;
            padding: 14px 24px;
            text-decoration: none;
            color: #333;
            font-size: 16px;
            font-weight: 500;
            transition: all 0.3s;
            border-radius: 6px;
        }
        
        .nav-link:hover, .nav-link:focus {
            background-color: #f8f9fa;
            color: #007bff;
        }
        
        .nav-link-icon {
            margin-right: 12px;
            font-size: 20px;
        }
        .container {
            max-width: 1000px;
            margin: auto;
        }
        .card {
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }
        .card-body {
            padding: 20px;
        }

        .btn {
            padding: 10px 16px;
            font-size: 14px;
            border-radius: 6px;
            transition: background 0.3s;
        }
        .btn:hover {
            opacity: 0.9;
        }
        .grid {
            display: grid;
            gap: 20px;
        }
        .grid-cols-12 {
            grid-template-columns: repeat(12, 1fr);
        }
        .grid-cols-1 {
            grid-template-columns: repeat(1, 1fr);
        }

        .lg\:grid-cols-2 {
            grid-template-columns: repeat(2, 1fr);
        }
        .col-span-12 {
            grid-column: span 12;
        }
        .lg\:col-span-4 {
            grid-column: span 4;
        }
        .xl\:col-span-8 {
            grid-column: span 8;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }
        thead {
            background-color: #f4f5f7;
            color: #333;
        }
        td, th {
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }

        .status-shipped {
            background-color: #d4edda;
            color: #155724;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: bold;
        }

        @media (max-width: 1024px) {
            .navbar-vertical-nav {
                width: 100%;
                position: relative;
                box-shadow: none;
            }
            .main-content-wrapper {
                margin-left: 0;
            }
        }
    </style>
    <link rel="stylesheet" href="/public/styles/adminSideBar.css">
    <title>Casa Vogue - Admin</title>
</head>
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Products</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </head>
    <body>
        <div class="main-wrapper">
        <%- include('./partials/sidebar') %>
        <div class="container my-4">
            <h1 class="mb-3">Product List</h1>
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="d-flex">
                    <input class="form-control me-2 w-75" type="text" name="search" style="max-height: 50px;"
                        placeholder="Search Products..." id="product-search">
                    <button class="btn btn-dark" type="submit" style="max-height: 50px;">üîç</button>
                </div>
                    <a href="/add-product">
                    <button class="btn btn-success">Add New Product</button>
                </a>
            </div>
            <table class="table table-bordered table-hover">
                <thead class="bg-gray-200 text-gray-700">
                    <tr>
                        <th class="px-6 py-3">Product Name</th>
                        <th class="px-6 py-3">Category</th>
                        <th class="px-6 py-3">Material</th>
                        <th class="px-6 py-3">Description</th>
                        <th class="px-6 py-3">Image-1</th>
                        <th class="px-6 py-3">Image-2</th>
                        <th class="px-6 py-3">Image-3</th>
                        <th class="px-6 py-3">Style</th>
                        <th class="px-6 py-3">Price</th>
                        <th class="px-6 py-3">Actions</th>
                        <th class="px-6 py-3">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.productName %></td>
                        <td><%= product?.productCategoryId?.categoryName %></td>
                        <td><%= product.material %></td>
                        <td><%= product.description %></td>
                        <td><img src="<%= product.productImage1 %>" width="50"></td>
                        <td><img src="<%= product.productImage2 %>" width="50"></td>
                        <td><img src="<%= product.productImage3 %>" width="50"></td>
                        <td><%= product.style %></td>
                        <td>$<%= product.productPrice %></td>
                        <td>
                            <a href="/product/edit/<%= product._id %>" class="btn btn-primary">Edit</a>
                            <button class="btn btn-danger" onclick="deleteProduct('<%= product._id %>')">Delete</button>
                        </td>
                        <td>
                            <% if (product.isListed) { %>
                                <button class="btn btn-danger list-toggle" data-id="<%= product._id %>" data-action="unlist">Unlist</button>
                            <% } else { %>
                                <button class="btn btn-success list-toggle" data-id="<%= product._id %>" data-action="list">List</button>
                            <% } %>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        </div>
        <script>
            async function deleteProduct(id) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, delete it!"
                }).then(async (result) => {
                    if (result.isConfirmed) {
                        const response = await fetch(`/deleteproduct?productId=${id}`, { method: 'DELETE' });
                        const result = await response.json();
                        if (result.success) {
                            Swal.fire("Deleted!", "Your product has been deleted.", "success").then(() => window.location.reload());
                        }
                    }
                });
            }
        </script>
    </body>
</html>