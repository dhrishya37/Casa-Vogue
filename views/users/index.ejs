    <!-- JavaScript for Mobile Navigation -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
            const closeMenu = document.querySelector('.close-menu');
            const navWrapper = document.querySelector('.nav-wrapper');
            const overlay = document.querySelector('.overlay');
            
            // Clone nav links and icons for mobile menu
            const navLinks = document.querySelector('.nav-links.d-none.d-md-flex');
            const navIcons = document.querySelector('.nav-icons.d-none.d-md-flex');
            
            if (navLinks && navWrapper) {
                const clonedLinks = navLinks.cloneNode(true);
                clonedLinks.classList.remove('d-none', 'd-md-flex');
                navWrapper.appendChild(clonedLinks);
            }
            
            if (navIcons && navWrapper) {
                const clonedIcons = navIcons.cloneNode(true);
                clonedIcons.classList.remove('d-none', 'd-md-flex');
                navWrapper.appendChild(clonedIcons);
            }
            
            mobileMenuToggle.addEventListener('click', function() {
                navWrapper.classList.add('active');
                overlay.classList.add('active');
                document.body.style.overflow = 'hidden';
            });
            
            closeMenu.addEventListener('click', function() {
                navWrapper.classList.remove('active');
                overlay.classList.remove('active');
                document.body.style.overflow = '';
            });
            
            overlay.addEventListener('click', function() {
                navWrapper.classList.remove('active');
                overlay.classList.remove('active');
                document.body.style.overflow = '';
            });
            
            // Close menu on window resize if width > 768px
            window.addEventListener('resize', function() {
                if (window.innerWidth > 768) {
                    navWrapper.classList.remove('active');
                    overlay.classList.remove('active');
                    document.body.style.overflow = '';
                }
            });
        });
    </script>
